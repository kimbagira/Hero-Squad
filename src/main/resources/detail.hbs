{{#partial "content"}}
   <p>Content:</p>
   <p>{{Hero.content}}</p>
   <h5>Created At:</h5>
   <p> {{Herop.createdAt}}</p>
   <h5>Hero status:</h5>
   <p>
       {{#if Hero.published}}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/hero/{{hero.id}}/update">Edit this post</a>
   </p>
{{/partial}}
{{> layout.hbs}}