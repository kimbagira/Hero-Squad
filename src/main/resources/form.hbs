{{#partial "content"}}

   {{#if editPost}}
     <h1>Edit this Post!</h1>
     <form action="/posts/{{editPost.id}}/update" method="post">
         <label for="content">Edit this post's content</label>
         <input id="content" name="content" type="text" value="{{editPost.content}}">

   {{else}}
     <h1>Add a new Hero!</h1>

     <form action="/heroes/new" method="Hero">
       <label for="Name">Hero String name</label>
       <input id="four" name="name" type="text">

 <label for="age">Hero String age</label>
       <input id="three" name="age" type="text">

 <label for="name">Hero String power</label>
       <input id="two" name="power" type="text">


 <label for="content">Hero String weakness</label>
       <input id="one" name="content" type="text">


   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
     </form>

{{/partial}}

{{> layout.hbs}}